{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "import/extensions": ["error", "ignorePackages"],
    "no-console": "off",
    "camelcase": ["error", { "allow": ["_id", "snake_case"] }]
  }
}
